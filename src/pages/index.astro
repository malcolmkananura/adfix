---
import Layout from '../layouts/Layout.astro';
import CoreValues from '../components/coreValues.astro';
---

<Layout title="Home">

	
</Layout>

<div class="hero">
    <p class="word1">Who we are...</p>
    <p class="word2">What we do...</p>
    <p class="word3">Why trust us...</p>
    <button class="btn">Learn more...</button>
</div>
<div class="continer2">
    <div class="item1">
        <div class="text-ph"></div>
        <div class="icon-ph"></div>
    </div>
    <div class="item2">
        <div class="text-ph"></div>
        <div class="icon-ph"></div>
    </div>
    <div class="item3">
        <div class="text-ph"></div>
        <div class="icon-ph"></div>
    </div>
</div>

<CoreValues></CoreValues>


<style>

    

    

    .word1{
        font-size:128px;
        color: #333367;
        margin-top: 1rem;
        margin-bottom:1rem;
        padding-left: 8rem;
        padding-top: 3rem;
    }
    .word2{
        font-size:96px;
        color: #333367;
        margin-top: 1rem;
        margin-bottom:1rem;
        padding-left: 28rem;
    }
    .word3{
        font-size:64px;
