    }

    .continer2{
        background-color:#333367;
        width:100%;
        height:60rem;
        color: white;
        margin-right: 0px;
        display: grid;
        grid-template-rows: repeat(3 , 20rem) ;
        grid-gap: 0.5rem;
        padding: 3rem;
    }

    .item1{

        background-color: rgb(193, 0, 0);
        width: 90%;
        height:20rem;
        display: flex;
        margin-left: 2rem;
        margin-right: 2rem;
